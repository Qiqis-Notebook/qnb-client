{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@Assets/*": ["src/renderer/assets/*"],
      "@Components/*": ["src/renderer/components/*"],
      "@Config/*": ["src/renderer/config/*"],
      "@Layouts/*": ["src/renderer/layouts/*"],
      "@Pages/*": ["src/renderer/pages/*"],
      "@Types/*": ["src/renderer/types/*"]
    }
  },
  "include": ["src/**/*", "src/config"]
}
